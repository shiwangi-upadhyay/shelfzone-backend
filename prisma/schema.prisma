  provider                  String   @default("anthropic")
  inputPricePerMillion      Decimal  @map("input_price_per_million") @db.Decimal(10, 6)
  outputPricePerMillion     Decimal  @map("output_price_per_million") @db.Decimal(10, 6)
  cacheInputPricePerMillion Decimal? @default(0) @map("cache_input_price_per_million") @db.Decimal(10, 6)
  effectiveFrom             DateTime @default(now()) @map("effective_from") @db.Timestamptz(6)
